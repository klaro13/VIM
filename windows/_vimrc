"--------------------------------------------------------------------------------
" Remove traling whitespace
"
function! s:RemoveTrailingWhitespaces()
  "save last search pattern from REG=/
  let _s=@/
  "save last cursor position
  let l = line(".")
  let c = col(".")
  %s/\s\+$//e
  "restore all
  let @/=_s
  call cursor(l,c)
endfunction

autocmd BufWritePre * :call <SID>RemoveTrailingWhitespaces()
"autocmd BufWritePre * :%s/\s\+$//e

